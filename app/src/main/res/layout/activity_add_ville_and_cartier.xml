<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVilleAndCartier">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioVille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter ville"
            android:textColor="@color/radio_button_text_color" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Entre la ville:   " />

            <EditText
                android:id="@+id/villeAddVille"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/custom_shape"
                android:hint="Ville"
                android:inputType="text"
                android:padding="8dp" />

        </RadioGroup>

        <RadioButton
            android:id="@+id/radioQuartier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter Quartier"

            android:textColor="@color/radio_button_text_color" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choisir la ville:  " />

                <Spinner
                    android:id="@+id/villeSpinnerAddVille"
                    android:layout_width="132dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_shape"

                    />

            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="27dp">

            </Space>


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entre le quartier: " />

                <EditText
                    android:id="@+id/quartierAddVille"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_shape"
                    android:ems="10"
                    android:hint="Quartier"
                    android:inputType="text"
                    android:padding="8dp" />
            </RadioGroup>
        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="27dp">

        </Space>

        <Button
            android:id="@+id/btnOkAddVille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/radio_button_text_color"
            android:text="Ajouter" />

    </RadioGroup>

    <ImageButton
        android:id="@+id/btnBackAddVille"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_arrow_back_ios_24"

        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#D50000"
        android:gravity="center"
        android:text="ADD VILLE/QUARTIER"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D50000"
        android:gravity="center"
        android:text="SUPRIMER VILLE/QUARTIER"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <EditText
        android:id="@+id/editville"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Entre ville"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/editquartier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:hint="Entre quartier"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editville"
        app:layout_constraintVertical_bias="0.054" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="129dp"
        android:layout_height="151dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editville"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <RadioButton
            android:id="@+id/supressville"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suprimer ville" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp">

        </Space>

        <RadioButton
            android:id="@+id/supressquartier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suprimer quartier" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSuprimer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="SUPRIMER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />
</androidx.constraintlayout.widget.ConstraintLayout>