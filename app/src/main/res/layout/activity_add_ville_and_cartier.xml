<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVilleAndCartier">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBackAddVille"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_arrow_back_ios_24"

            />

        <RadioButton
            android:id="@+id/radioVille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/radio_button_text_color"
            android:text="Ajouter ville" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Entre la ville:   " />

            <EditText
                android:id="@+id/villeAddVille"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:background="@drawable/custom_shape"
                android:hint="Ville"
                android:inputType="text" />

        </RadioGroup>

        <RadioButton
            android:id="@+id/radioQuartier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter Quartier"
            
            android:textColor="@color/radio_button_text_color" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choisir la ville:  " />

                <Spinner
                    android:id="@+id/villeSpinnerAddVille"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_shape"

                    />

            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="27dp">

            </Space>


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entre le quartier: " />

                <EditText
                    android:id="@+id/quartierAddVille"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_shape"
                    android:ems="10"
                    android:hint="Quartier"
                    android:inputType="text"
                    android:padding="8dp" />
            </RadioGroup>
        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="27dp">

        </Space>

        <Button
            android:id="@+id/btnOkAddVille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/radio_button_text_color"
            android:text="Ajouter" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>